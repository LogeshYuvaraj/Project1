<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/linearlay2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/editapprove"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="70dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/approvals"
                                        android:background="@drawable/cell_shape"
                                        android:layout_alignParentRight="true" />

                                    <ImageView
                                        android:id="@+id/editimage"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/edit"
                                        android:background="@drawable/cell_shape"
                                        android:layout_alignParentRight="true" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/AllowanceNo_tv"
                                        android:ellipsize="end"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:text="Allowance No"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize12sp"
                                        android:background="@drawable/cell_shape"
                                        />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/AllowanceDate_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Allowance Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape"
                        />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/employee_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Employee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Total_Amount_tv"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Status_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Approval Status"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/attachment1_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/attachment2_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>