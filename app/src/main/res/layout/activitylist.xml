<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/editimage"
                        android:layout_alignParentEnd="true"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/edit"
                        android:background="@drawable/cell_shape"
                        android:layout_alignParentRight="true" />

                    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ActivityNo_tv"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Activity No."
        android:background="@drawable/cell_shape"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize12sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ActivityDate_tv"
        android:text="Activity Date"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/textsize12sp"
        android:background="@drawable/cell_shape"

        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/CustomerName_tv"
        android:text="Customer Name"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/textsize12sp"
        android:background="@drawable/cell_shape"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_tv"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Activity"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize12sp"
        android:background="@drawable/cell_shape"

        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/ContactNo_tv"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Contact No"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize12sp"
        android:background="@drawable/cell_shape"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/StartTime_tv"
        android:ellipsize="end"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Start Time"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize12sp"
        android:background="@drawable/cell_shape"

        />

<TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/EndTime_tv"
    android:ellipsize="end"
    android:padding="5dp"
    android:singleLine="true"
    android:text="EndTime"
    android:textColor="@color/black"
    android:textSize="@dimen/textsize12sp"
    android:background="@drawable/cell_shape"

    />

<TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/Employee_tv"
    android:ellipsize="end"
    android:padding="5dp"
    android:singleLine="true"
    android:text="Employee"
    android:textColor="@color/black"
    android:textSize="@dimen/textsize12sp"
    android:background="@drawable/cell_shape"

    />

   <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/Status_tv"
    android:ellipsize="end"
    android:padding="5dp"
    android:singleLine="true"
    android:text="Status"
    android:textColor="@color/black"
    android:textSize="@dimen/textsize12sp"
       android:background="@drawable/cell_shape"

       />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Description_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/FollowupDate_tv"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="FollowupDate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12sp"
                        android:background="@drawable/cell_shape"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>