<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/font_10"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:elevation="6dp"
        android:id="@+id/main_layout"
        android:padding="5dp"
        android:background="@drawable/background_corner"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/fromdate_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="FromDate"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <EditText
            android:id="@+id/fromdate_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextheight"
            android:layout_weight="2"
            android:background="@drawable/white_bg_grey_border"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/todate_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="ToDate"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <EditText
            android:id="@+id/todate_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextheight"
            android:layout_weight="2"
            android:background="@drawable/white_bg_grey_border"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/submit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="15dp"
        >

        <Button
            android:id="@+id/Btnsubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/rounded_bg"
            />


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/font_10"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearlay2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/editapprove"
                                android:layout_alignParentEnd="true"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:text="Approve"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@drawable/cell_shape"
                                android:layout_alignParentRight="true" />
                            <TextView
                                android:id="@+id/editimage"
                                android:layout_alignParentEnd="true"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="Edit"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:background="@drawable/cell_shape"
                                android:layout_alignParentRight="true" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/cell_shape"
                                android:ellipsize="end"
                                android:padding="5dp"
                                android:id="@+id/QuoteNo_tv"
                                android:singleLine="true"
                                android:text="Quote No"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:id="@+id/QuoteDate_tv"
                                android:singleLine="true"
                                android:text="Quote Date"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:id="@+id/ValidTill_tv"
                                android:text="Valid Till"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:id="@+id/Employee_tv"
                                android:text="Employee"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:id="@+id/Customer_tv"
                                android:text="Customer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Quote Type"
                                android:id="@+id/QuoteType_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="QuoteStatus"
                                android:id="@+id/QuoteStatus_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Line Total"
                                android:id="@+id/Line_Total_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Total_Discount"
                                android:id="@+id/Total_Discount_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="TaxAmt "
                                android:id="@+id/TaxAmt_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Total"
                                android:id="@+id/Total_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:background="@drawable/cell_shape"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Approve Status"
                                android:id="@+id/ApprStatus_tv"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/viewquotationRecycle"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>



</LinearLayout>


</RelativeLayout>