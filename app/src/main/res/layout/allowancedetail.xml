<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlay2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editrowbtn"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit"
                    android:background="@drawable/cell_shape"
                    android:layout_alignParentRight="true" />

                <ImageButton
                    android:id="@+id/deletebtn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:src="@drawable/ic_deleteicon" />

                <EditText
                    android:id="@+id/customername"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Customer Name."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <EditText
                    android:id="@+id/Advtype"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="AdvanceType."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <EditText
                    android:id="@+id/AllowanceType"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="AllowanceType."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <EditText
                    android:id="@+id/Fare"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:text="Fare."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <EditText
                    android:id="@+id/Currency"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Currency."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <TextView
                    android:id="@+id/Attachment"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Attachment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <TextView
                    android:id="@+id/ApprovedBy"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="ApprovedBy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12sp" />

                <LinearLayout
                    android:id="@+id/ApprovedStatus"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/approve_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Approve"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:id="@+id/reject_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Reject"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
