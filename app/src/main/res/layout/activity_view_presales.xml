<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/font_10"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:elevation="6dp"
        android:id="@+id/main_layout"
        android:padding="5dp"
        android:background="@drawable/background_corner"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="FromDate"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <EditText
            android:id="@+id/fromdate_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextheight"
            android:layout_weight="2"
            android:background="@drawable/white_bg_grey_border"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="ToDate"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14" />

        <EditText
            android:id="@+id/todate_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittextheight"
            android:layout_weight="2"
            android:background="@drawable/white_bg_grey_border"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="15dp"
        >

        <Button
            android:id="@+id/Btnsubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/rounded_bg"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/font_10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editimage"
                        android:layout_alignParentEnd="true"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:background="@drawable/cell_shape"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="DocNo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="DocDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="OppType"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Category"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="TargetStartDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="TargetEndDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="TargetStatusDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="TargetClDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="PotentialAmt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="WeightedAmt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="GrossProfit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Reported"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="RespDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="RespEmpName"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="VerifyDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Item code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Item Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Qty"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Price"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/presalesviewRecycle"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>